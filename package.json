    "@tailwindcss/typography": "^0.5.16",
    "@types/mdast": "^4.0.4",
    "@types/node": "^20.17.30",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.24.0",
