    "diacritics": "^1.3.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.11.1",
    "esno": "^0.4.3",
    "feed": "^4.2.2",
    "fs-extra": "^9.1.0",
    "gray-matter": "^4.0.2",
    "husky": "4.2.3",
    "lint-staged": "^11.0.0",
    "markdown-it": "^12.0.4",
