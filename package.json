{
  "name": "chengpeiquan.com",
  "version": "0.1.0",
  "description": "My personal website, technology stack based on Vue.js 3.0, and Vite 2.0, use Server Side Generation.",
  "author": "chengpeiquan",
  "homepage": "https://chengpeiquan.com/",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite --host",
    "build": "cross-env NODE_ENV=production vite-ssg build && esno ./scripts/rss.ts",
    "tsc": "vue-tsc --noEmit",
    "lint": "eslint src --ext .js,.ts",
    "format": "prettier --write .",
    "backup": "git add . && git commit -m \"chore: back up some code adjustments.\" && git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chengpeiquan/chengpeiquan.com.git"
  },
  "dependencies": {
    "@iconify/iconify": "^2.0.4",
    "@vueuse/core": "^6.3.3",
    "@vueuse/head": "^0.6.0",
    "dayjs": "^1.10.4",
    "nprogress": "^0.2.0",
    "vue": "^3.2.11",
    "vue-router": "^4.0.11"
  },
  "devDependencies": {
    "@iconify/json": "^1.1.401",
    "@octokit/rest": "^18.10.0",
    "@types/diacritics": "^1.3.1",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.9.1",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@vitejs/plugin-vue": "^1.6.2",
    "@vue/compiler-sfc": "^3.2.11",
    "@vue/server-renderer": "^3.2.11",
    "@vuedx/typecheck": "^0.7.4",
    "@vuedx/typescript-plugin-vue": "^0.7.4",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "diacritics": "^1.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.17.0",
    "esno": "^0.9.1",
    "feed": "^4.2.2",
    "fs-extra": "^9.1.0",
    "gray-matter": "^4.0.3",
    "lint-staged": "^11.1.2",
    "markdown-it": "^12.2.0",
    "markdown-it-anchor": "^8.3.0",
    "markdown-it-external-links": "^0.0.6",
    "markdown-it-image-lazy-loading": "^1.2.0",
