    "dayjs": "^1.10.4",
    "nprogress": "^0.2.0",
    "vue": "^3.0.11",
    "vue-router": "^4.0.8"
  },
  "devDependencies": {
    "@iconify/json": "^1.1.298",
    "@octokit/rest": "^18.1.0",
    "@types/diacritics": "^1.3.1",
    "@types/fs-extra": "^9.0.6",
    "@types/node": "^14.14.25",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
