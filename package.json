{
  "name": "chengpeiquan.com",
  "version": "0.1.0",
  "description": "My personal website, technology stack based on Vue.js 3.0, and Vite 2.0, use Server Side Generation.",
  "author": "chengpeiquan",
  "homepage": "https://chengpeiquan.com/",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite --host",
    "build": "npm run page && npm run rss && npm run json",
    "page": "cross-env NODE_ENV=production vite-ssg build",
    "rss": "esno ./scripts/rss",
    "json": "esno ./scripts/json",
    "tsc": "vue-tsc --noEmit",
    "lint": "eslint src --ext .js,.ts",
    "format": "prettier --write .",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx npx npm-check-updates -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chengpeiquan/chengpeiquan.com.git"
  },
  "dependencies": {
    "@iconify/iconify": "^2.2.1",
    "@vueuse/core": "^8.3.1",
    "@vueuse/head": "^0.7.6",
    "dayjs": "^1.11.1",
    "nprogress": "^0.2.0",
    "vue": "^3.2.33",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@iconify/json": "^2.1.34",
    "@octokit/rest": "^18.12.0",
    "@types/diacritics": "^1.3.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.31",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/compiler-sfc": "^3.2.33",
    "@vue/server-renderer": "^3.2.33",
    "@vuedx/typecheck": "^0.7.5",
    "@vuedx/typescript-plugin-vue": "^0.7.5",
    "chalk": "^5.0.1",
    "cross-env": "^7.0.3",
    "diacritics": "^1.3.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "esno": "^0.14.1",
    "feed": "^4.2.2",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "lint-staged": "^12.4.1",
    "markdown-it": "^13.0.0",
    "markdown-it-anchor": "^8.6.2",
    "markdown-it-external-links": "^0.0.6",
    "markdown-it-image-lazy-loading": "^1.2.0",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-prism": "^2.2.4",
    "markdown-it-shiki": "^0.5.1",
    "markdown-it-table-of-contents": "^0.6.0",
    "postcss": "^8.4.13",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.6.2",
    "prism-theme-vars": "^0.2.2",
    "typescript": "^4.6.4",
    "unplugin-icons": "^0.14.1",
    "unplugin-vue-components": "^0.19.3",
    "vite": "^2.9.6",
    "vite-plugin-banner": "^0.2.0",
    "vite-plugin-md": "^0.13.0",
    "vite-plugin-pages": "^0.23.0",
    "vite-plugin-purge-icons": "^0.8.1",
    "vite-plugin-windicss": "^1.8.4",
    "vite-ssg": "^0.19.2",
    "vue-baidu-analytics": "^2.2.0",
    "vue-tsc": "^0.34.11",
    "windicss": "^3.5.1",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "esno scripts/verifyCommit.ts"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
