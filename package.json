    "next-intl": "^3.26.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-forage": "^0.2.2",
    "react-ga4": "^2.1.0",
    "thumbhash": "^0.1.1",
    "zod": "^3.24.2"
  },
