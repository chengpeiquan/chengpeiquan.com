{
  "name": "chengpeiquan.com",
  "version": "0.1.0",
  "description": "My personal website, technology stack based on Vue.js 3.0, and Vite 2.0, use Server Side Generation.",
  "author": "chengpeiquan",
  "homepage": "https://chengpeiquan.com/",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite --host",
    "build": "npm run build:website && npm run build:rss && npm run build:json",
    "build:website": "cross-env NODE_ENV=production vite-ssg build",
    "build:rss": "tsx ./scripts/rss",
    "build:json": "tsx ./scripts/json",
    "tsc": "vue-tsc --noEmit",
    "lint": "eslint src --ext .js,.ts",
    "format": "prettier --write .",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx npm-check-updates -u",
    "prepare": "simple-git-hooks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chengpeiquan/chengpeiquan.com.git"
  },
  "dependencies": {
    "@bassist/utils": "^0.9.0",
    "@iconify/iconify": "^2.2.1",
    "@vueuse/core": "^8.9.4",
    "@vueuse/head": "^0.7.6",
    "dayjs": "^1.11.3",
    "nprogress": "^0.2.0",
    "vue": "^3.2.37",
    "vue-router": "^4.1.2"
  },
  "devDependencies": {
    "@iconify/json": "^2.1.78",
    "@octokit/rest": "^19.0.3",
    "@types/diacritics": "^1.3.1",
    "@types/node": "^18.0.5",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/server-renderer": "^3.2.37",
    "@vuedx/typecheck": "^0.7.5",
    "@vuedx/typescript-plugin-vue": "^0.7.5",
    "@withtypes/fs-extra": "^0.1.1",
    "@withtypes/markdown-it": "^0.1.1",
    "cross-env": "^7.0.3",
    "diacritics": "^1.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.2.0",
    "fast-glob": "^3.2.12",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "happy-dom": "^6.0.3",
    "lint-staged": "^13.0.3",
    "markdown-it-anchor": "^8.6.4",
    "markdown-it-external-links": "^0.0.6",
    "markdown-it-image-lazy-loading": "^1.2.0",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-prism": "^2.2.4",
    "markdown-it-shiki": "^0.5.1",
    "markdown-it-table-of-contents": "^0.6.0",
    "postcss": "^8.4.14",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.7.1",
    "prism-theme-vars": "^0.2.4",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.2",
    "typescript": "^4.7.4",
    "unplugin-icons": "^0.14.7",
    "unplugin-vue-components": "^0.21.1",
    "vite": "^2.9.14",
    "vite-plugin-banner": "^0.5.0",
    "vite-plugin-md": "^0.18.1",
    "vite-plugin-pages": "^0.25.0",
    "vite-plugin-purge-icons": "^0.8.1",
    "vite-plugin-windicss": "^1.8.7",
    "vite-ssg": "^0.20.2",
    "vue-baidu-analytics": "^2.2.0",
    "vue-tsc": "^0.38.8",
    "windicss": "^3.5.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit $1"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
